<div>
   <a asp-action="Index">Back to List</a>
</div>


<hr/>
<h2>Leave Allocations</h2>
@{ 
    <div class="card" style="width:30rem">
        <ul class="list-group list-group-flush">
            @foreach(var item in Model.LeaveAllocations)
            {
                <li class="list-group-item"> <h6>@item.LeaveType.Name<span class="badge badge-secondary">@item.NumberOfDays</span>  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-pencil"></i> Edit</a></h6></li>
            }
        </ul>

    </div>
}
